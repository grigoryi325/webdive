@model jQuery.Models.AccountModels.Admin
@{
    ViewBag.Title = "EditAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login_form {
        width: 350px;
        margin: 0 auto;
    }

    #errors li {
        font-weight: bold;
        color: #f00;
    }
</style>

<script>
    $(function () {
        $("#errors li").each(function () {
            if ($(this).text() == "") {
                $(this).hide();
            } else {
                $(this).show();
            }
        });
    });
</script>

<div class="login_form">
    <h3 style="text-align:center; margin-bottom: 27px;" class="name_page">Редактирование аккаунта</h3>

    <form method="post" action="/Admin/EditAccount/">

        <input type="hidden" name="id" value="@Model.Id">

        <label>Логин</label>
        <input class="form-control" type="text" required="" placeholder="введите логин" name="LoginAdmin" value="@Model.LoginAdmin" /><br>

        <label>Email</label><br>
        <input class="form-control" tupe="email" name="Email" required="" placeholder="введите Email" value="@Model.Email" /><br>

        <label>Введите старый пароль</label><br>
        <input class="form-control" type="password" name="OldPassword" required="" placeholder="введите старый пароль" /><br>

        <label>Введите новый пароль</label><br>
        <input class="form-control" type="password" name="NewPassword" required="" placeholder="введите новый пароль" /><br>

        <label>Подтвердите новый пароль</label><br>
        <input class="form-control" type="password" name="ReNewPassword" required="" placeholder="введите нывый пароль для подтверждения" /><br>

        <input class="btn btn-default" type="submit" value="Изменить" />
    </form>
</div>

