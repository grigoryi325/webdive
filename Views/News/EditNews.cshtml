
@{
    ViewBag.Title = "EditNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/ckeditor/ckeditor.js"></script>


<h3 class="name_page">Редактирование новости</h3>

<xml>
    <form method="post" action="/News/EditNews/">
        <input type="hidden" name="Id" id="Id" value="@ViewBag.news.Id">
        <input type="hidden" name="DateTime" value="@ViewBag.news.DateTime"/>
        <input type="hidden" name="Status" value="Preview" />
        <textarea name="Description" id="editor2">
            @ViewBag.news.Description
        </textarea>

        <script>
                CKEDITOR.replace('editor2');
        </script>
        <br>
        <input style="margin-left:10px;" class="btn btn-success" type="submit" id="submit" value="Сохранить">
    </form>
</xml><br>
<a style="margin-left:10px;" class="edit" href="/Admin/Index">Назад</a>
